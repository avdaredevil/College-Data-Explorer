dom-module#sidebar-content
    style: :clean-css
        paper-icon-item {color:white}
        paper-icon-item a {text-decoration:inherit;color:inherit}
        .div {border-top: 1px solid rgba(255,255,255,.09);margin-top:1em;padding: .75em 1.5em;color: #cc181e;font-size: .7em;text-transform: uppercase}
        #logo {width: 100%;height:7em;margin:1em 0;color:white}
        a {text-decoration: none}
    template
        iron-icon#logo(icon="gesture")
        .div Exploration
        template(is="dom-repeat", items="[[explore]]")
            a(href="[[item.link]]"): paper-icon-item
                iron-icon(icon="[[item.icon]]",item-icon)
                span [[item.text]]
                paper-ripple
        .div Statistics
        template(is="dom-repeat", items="[[stats]]")
            a(href="[[item.link]]"): paper-icon-item
                iron-icon(icon="[[item.icon]]",item-icon)
                span [[item.text]]
                paper-ripple
    script: :uglify-js:babel
        Polymer({
            is: "sidebar-content",
            properties: {
                explore: {type: Array, value: [
                    {icon: "home", text: "Table Explorer", link: "/"},
                    {icon: "social:whatshot", text: "State Search", link: "/states"},
                ]},
                stats: {type: Array, value: [
                    {icon: "trending-up", text: "Crime vs Tuition", link: "/crime-stats"},
                    {icon: "trending-up", text: "Quick Stats", link: "/quick-stats"},
                ]},
            },
        })